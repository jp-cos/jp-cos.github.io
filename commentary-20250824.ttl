  dct:title "（内容の取扱い）内容(2)" ;
  dct:alternative "内容(2)の内容の取扱い" ;
  schema:about <https://w3id.org/jp-cos/8220265200000000> ;
  schema:citation <https://w3id.org/jp-cos/8220263200000000> ;
